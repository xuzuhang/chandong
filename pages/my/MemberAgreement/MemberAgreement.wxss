/* pages/my/MemberAgreement/MemberAgreement.wxss */
.header{
  padding-bottom:140rpx;
}
.ag-tit{
    font-size: 28rpx;
    text-align: center;
    color: #020202;
    font-weight: 600;
    margin-bottom: 22rpx;
}
.Agreement{
  overflow: hidden;
  margin: 0 auto;
  width: 695rpx;
}
.scroll-view{
  height: 300px;
}
.scroll-view text{
  display:inline-block;
  color:#636363;
  font-size:22rpx;
  padding-bottom: 40px;
}
.autograph{
  float: right;
  margin-top: 24rpx;
  color:#636363;
  font-size:24rpx;
  text-align:right; 
}
.autograph view{
  width:311rpx;
  height: 130rpx;
  background: #f5f5f5;
  border-radius:17rpx; 
  text-align: center;
  line-height: 130rpx;
  margin:8rpx 0; 
  box-sizing:border-box;
  border:4rpx solid goldenrod; 
}
.autograph view image{
  width: 54rpx;
  height: 54rpx;
  vertical-align: middle;
  margin-right: 15rpx;
}
.footer{
  width: 100%;
  height: 110rpx;
  padding-top:30rpx; 
  border-top:1rpx solid #ccc;
  position: fixed;
  bottom: 0; 
  display:flex;
  justify-content: space-around;
  background: #fff;
}
.footer .price{
  font-size: 29rpx;
  color: #505050;
  font-weight: 600;
  margin-top:8rpx; 
  text-align: center;
}
.footer .sure{
  width: 278rpx;
  height: 80rpx;
  color: #fff;
  font-size: 33rpx;
  background: #f47c00;
  text-align: center;
  line-height: 80rpx;
  border-radius:40rpx; 
}