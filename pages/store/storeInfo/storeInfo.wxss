.container{
  width: 700rpx;
  margin: 0 auto;
}
.header{
  border-bottom: 1rpx solid #e6e6e6;
}
.header .tab{
    /* width: 446rpx; */
    display: flex;
    margin: 0 auto;
    font-size: 27rpx;
    color: #989898;
    text-align: center;
}
.header .tab view{
  padding:30rpx 0 18rpx;
  /* width: 223rpx; */
  text-align: center;
}
.header .storetit{
  width: 100%;
  color: #000;
}
