/* pages/store/store.wxss */
page{
  width: 100%;
  height: 100%;
}
.container{
   width: 100%;
  height: 100%;
}
.title{
  width: 460rpx;
  display: flex;
  height: 7%;
  margin: 15rpx auto 0;
}
.title view{
  border: 1rpx solid #f47c02;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 30rpx;
  width: 230rpx;
  text-align: center;
  color: #f47c02;
}
.title .listtit{
  border-top-left-radius:15rpx;
  border-bottom-left-radius:15rpx;
}
.title .maptit{
  border-top-right-radius:15rpx;
  border-bottom-right-radius:15rpx;
}
.title .on{
  background: #f47c02;
   color: #fff;
}
.location{
  width: 696rpx;
  margin: 28rpx auto 45rpx;
  display: flex;
  justify-content: space-between;
  font-size: 25rpx;
  height: 3%;
}
.location image{
  width: 34rpx;
  height: 34rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.storeList{
  width: 696rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  border-bottom: 0.5rpx solid #b3b3b3;
  padding-bottom:20rpx; 
  padding-top: 20rpx;
}
.storeList image{
  width: 122rpx;
  height: 122rpx;
  border-radius:9rpx; 
}
.storeList .info{
  width: 554rpx;
}
.storeList .info .tit{
  display: flex;
  justify-content: space-between;
}
.storeList .info .distance{
  display: flex;
  justify-content: space-between;
  color:#b3b3b3;
  font-size:22rpx; 
  margin:8rpx 0 18rpx; 
}
.storeList .info .free{
  font-size: 24rpx;
  color:#b3b3b3;
}
.main{
  width:100%;
  height:90%;
}
.s-map{
  width:100%;
  height:100%;
}
map{
  width:100%;
  height:100%;
}
