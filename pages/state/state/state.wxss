/* pages/state/state.wxss */
page{background: #f5f5f5;}
.header{
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
  position:fixed;
  top: 0;
  width: 100%;
}
.center{
  padding-top: 60rpx;
}
.header .Htit{
  float: left;
  font-size: 28rpx;
  color: #676767;
  font-weight: 600;
  height: 80rpx;
  margin-left:66rpx;
}
.header image{
  width:41rpx;
  height: 38rpx;
  float: right;
  margin:16rpx 36rpx 0 0; 
}
.Cwrap{
  width:100%;
  padding:30rpx 0 40rpx;
  background: #fff; 
  margin-bottom: 30rpx;
}
.Cwrap>view{
  width: 695rpx;
  margin: 0 auto;
}
.Cinfo image{
    width: 60rpx;
    height: 60rpx;
    border-radius:50%;
    border: 0.5rpx solid  #f37a00;
    vertical-align: middle;
    margin-right: 20rpx;
}
.Ctop{
  display: flex;
  justify-content: space-between;
  color: #b2b2b2;
  font-size: 24rpx;
 padding-bottom: 30rpx;
}
.Ctime{
  line-height: 60rpx;
}
.Ctit{
  word-wrap:break-word; 
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
}
.Cimg{
  margin-top: 30rpx!important;
  height: 130px;
}
.Cimg image{
  display: block;
  margin: auto;
}
.center>view{
    overflow: hidden;
    width: 100%;
}


