/* pages/index/index.wxss */
.header{
  width: 692rpx;
  margin: 0 auto;
}
.header swiper{
  margin-top: 10rpx;
  height: 220rpx;
}
.header swiper navigator{
  width: 100%;
  height: 100%;
}
.header image{
  width: 100%;
  height: 100%;
  border-radius:10rpx; 
}
.center{
  width: 692rpx;
  margin: 20rpx auto 0;
}
.top{
    display: flex;
    justify-content: space-between;
    font-size:22rpx;
    padding:37rpx 0 20rpx;
    border-bottom: 1rpx solid #f47b00;
    position: relative;
}
.top .location image{
  margin-right: 22rpx;
}
.top .num image{
  margin-left: 22rpx;
}
.top image{
  width: 31rpx;
  height: 31rpx;
}
.scan{
  width: 148rpx;
  height: 148rpx;
  border: 4rpx solid #f47b00;
  border-radius:50%; 
  position: absolute;
  z-index: 1000;
  top: 10rpx;
  left: 272rpx;
  background: #fff;
  text-align: center;
  color: #f47b00;
}
.scan image{
  width: 66rpx;
  height: 70rpx;
  margin: 20rpx 0 8rpx;
}
.list{
  font-size: 22rpx;
  color: #000;
  font-weight: 600;
  display: flex;
  justify-content: space-between;
  margin-top: 37rpx;
}
.list navigator{
  width: 90rpx;
  text-align: center;
}
.list .left,.list .right{
  width: 260rpx;
  display: flex;
  justify-content: space-around;
}
.list image{
  width: 81rpx;
  height: 81rpx;
  margin-bottom: 20rpx;
}

.banner image{
  margin: 40rpx 0 50rpx;
  width: 100%;
  height: 180rpx;
  border-radius:10rpx; 
}
.recommend .title{
  font-size:35rpx;
  font-weight:600;
  color:#000;
  margin-bottom: 32rpx;
}
.info{
  display: flex;
  flex-wrap: wrap;
}
.shop{
  margin:0 10rpx 30rpx;
}
.info image{
  width: 210rpx;
  height: 190rpx;
  border-radius:10rpx; 
}
.info .tit{
  font-size: 22rpx;
  color: #36364d;
  margin: 18rpx 0 12rpx;
}
.info .loc{
  font-size: 18rpx;
  color: #999;
}